---
import { getCollection } from "astro:content";
import { Picture } from "@astrojs/image/components";
import Layout from "@/layouts/Layout.astro";
import ReviewsCarousel from "@/components/reviews-carousel.astro";
import ServiceCard from "@/components/service-card.astro";

const allServices = await getCollection("services");
---

<Layout>
   <section class="h-screen flex items-center">
      <div class="container">
         <div class="max-w-xl space-y-4">
            <h1 class="text-6xl font-bold font-heading">
               <span class="text-base uppercase block tracking-wider mb-4"
                  >Roofing Specialis</span
               >
               JoPros Miami's Best Roofing Company
            </h1>
            <p class="line-clamp-3 text-xl">
               For residential homes, commercial warehouses, high-rise office
               buildings, shopping centers, executive complexes, and more.
            </p>
            <div class="!mt-6 flex gap-4">
               <a class="button" href="">Get a Quote</a>
               <a class="button bg-secondary" href="/about">Read More</a>
            </div>
         </div>
      </div>
   </section>

   <section class="bg-primary text-white section">
      <div class="container flex justify-between">
         <div class="text-center space-y-2 flex-1">
            <h3 class="text-5xl font-bold font-heading">400+</h3>
            <p>Employees</p>
            <p>Hight Quality</p>
         </div>
         <div class="text-center space-y-2 border-l border-r flex-1">
            <h3 class="text-5xl font-bold font-heading">400+</h3>
            <p>Employees</p>
            <p>Hight Quality</p>
         </div>
         <div class="text-center space-y-2 flex-1">
            <h3 class="text-5xl font-bold font-heading">400+</h3>
            <p>Employees</p>
            <p>Hight Quality</p>
         </div>
      </div>
   </section>
   <section class="bg-slate-100 section">
      <div class="container flex items-center">
         <div class="w-[480px] h-[600px] bg-gray-300 relative">
            <Picture
               class="absolute inset-0 h-full w-full object-cover"
               src="/images/worker.jpg"
               alt=""
               fit="cover"
               format="webp"
               widths={[300, 480]}
               aspectRatio="3:4"
            />
         </div>
         <div class="flex-1 pl-20 space-y-8">
            <h2 class="text-5xl font-bold max-w-lg font-heading leading-tight">
               Professional Service with quality and customer satisfaction
            </h2>
            <p class="line-clamp-6 pl-20">
               JoPros offers quality and expert roofing solutions with the same
               care and consideration you would expect to feel from family. We
               are a team of professional roofing contractors you can trust and
               count on. We are dedicated to far more than just delivering
               quality roofing we are dedicated to you. As specialists we hold
               quality and affordability as our top priorities. This allows us
               to provide you with the absolute best service possible in all and
               any roof you need.
            </p>
            <a href="/about" class="button ml-20">Read More</a>
         </div>
      </div>
   </section>
   <section class="section">
      <div class="container text-center">
         <h2 class="text-4xl font-bold font-heading">
            High Quality Roofing Solutions
         </h2>
         <p class="max-w-2xl mt-4 mx-auto text-gray-500">
            Lorem ipsum dolor sit amet consectetur, adipisicing elit. Sequi
            corrupti, ea necessitatibus alias placeat sapiente deleniti? Tempore
            odio officiis recusandae, eligendi hic doloremque sequi voluptatem
            harum quas amet quam aliquam?
         </p>

         <div class="grid grid-cols-3 gap-6 mt-12">
            {allServices.map((service) => <ServiceCard service={service} />)}
            <a
               href="/contact"
               class="bg-primary text-white p-6 flex flex-col items-center justify-center text-left space-y-4"
            >
               <h3 class="font-bold text-3xl font-heading">Need Help?</h3>
               <p class="line-clamp-3 text-center">
                  JoPros Roofing and Construction Service Team is here to help.
               </p>
               <div class="button bg-secondary">Get a Quote</div>
            </a>
         </div>
      </div>
   </section>

   <section class="section bg-slate-100">
      <div class="container flex items-center">
         <h2 class="w-1/3 font-bold text-4xl font-heading">
            We Have Served Over 35 Years to Create Great Buildings
         </h2>

         <div class="flex-1 space-y-4 pl-20">
            <p>
               Lorem ipsum dolor sit amet consectetur, adipisicing elit.
               Temporibus laborum quas nostrum fugit ut dicta, dolore, a
               repellendus nam cum, necessitatibus excepturi repudiandae
               deserunt aspernatur ipsam illum mollitia beatae perferendis.
            </p>
            <a class="button" href="/projects">See all projects</a>
         </div>
      </div>
      <div class="container grid grid-cols-3 gap-6 mt-20">
         <div class="h-[400px] bg-gray-200"></div>
         <div class="h-[400px] bg-gray-200"></div>
         <div class="h-[400px] bg-gray-200"></div>
         <div class="h-[400px] bg-gray-200"></div>
         <div class="h-[400px] bg-gray-200"></div>
         <div class="h-[400px] bg-gray-200"></div>
      </div>
   </section>

   <section class="section overflow-x-hidden">
      <div class="container">
         <h2 class="font-bold text-4xl">What Our Clients Say!</h2>
         <p>These are things that clients who have used our features say.</p>
      </div>
      <ReviewsCarousel />
   </section>
</Layout>
